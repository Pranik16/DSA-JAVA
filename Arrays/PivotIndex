class Solution {
    public int pivotIndex(int[] nums) {
        int Lsum=0;;
        int Rsum=0;
        int Tsum=0;
        int k;

        for(int i=0;i<nums.length;i++){
            Tsum+=nums[i];
        }
        for(k=0;k<nums.length;k++){
            
            Rsum=Tsum-Lsum-nums[k];
            
            if(Rsum==Lsum){
                return k;
            }
            Lsum+=nums[k];
        }   
        return -1;   
    }
}
